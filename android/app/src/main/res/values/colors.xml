    <color name="colorPrimary">@color/navy</color>
    <color name="colorPrimaryVariant">@color/navy_dark</color>
    <color name="colorOnPrimary">@color/cream</color>
    <color name="colorSecondary">@color/mauve</color>
    <color name="colorSecondaryVariant">@color/mauve_light</color>
